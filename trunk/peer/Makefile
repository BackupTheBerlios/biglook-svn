#*    The (gmake) Makefile to build the Null Biglook peer.             */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    The default configuration                                        */
#*---------------------------------------------------------------------*/
include ../../Makefile.kconfig

#*---------------------------------------------------------------------*/
#*    User files                                                       */
#*---------------------------------------------------------------------*/
#*--- Llib ------------------------------------------------------------*/
LLIB		= %app %error %layout
#*--- Lwidget ---------------------------------------------------------*/
LWIDGET		= %bglk-object %widget %container %label

#*---------------------------------------------------------------------*/
#*    Objects                                                          */
#*---------------------------------------------------------------------*/
LIB_OBJECTS	= $(LLIB:%=Llib/%.o) $(LWIDGET:%=Lwidget/%.o)
LIB_CLASSES	= $(LLIB:%=Llib/%.class) $(LWIDGET:%=Lwidget/%.class)

#*---------------------------------------------------------------------*/
#*    Population                                                       */
#*---------------------------------------------------------------------*/
SOURCES		= $(LLIB:%=Llib/%.scm) \
                  $(LWIDGET:%=Lwidget/%.scm) \
                  Llib/make-lib.scm

POPULATION	= $(SOURCES) Makefile
